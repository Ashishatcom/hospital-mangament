<% include ./partials/home-header %>
<style>
.row {
    width: 100%;
}
.register_form{
    width:50%;
    margin: 0 auto;
}
</style>
<div class="row mt-5">
  <% include partials/messages %>
    <div class="register_form">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <form action="/employee/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="hidden"name="role" value="1">
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="education">Education Qualification</label>
            <input
              type="text"
              id="education"
              name="education"
              class="form-control"
              placeholder="Enter Qualification"
              value="<%= typeof education != 'undefined' ? education : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="degignation">Degignation</label>
            <input
              type="text"
              id="degignation"
              name="degignation"
              class="form-control"
              placeholder="Degignation"
              value="<%= typeof degignation != 'undefined' ? degignation : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            <input
              type="text"
              id="address"
              name="address"
              class="form-control"
              placeholder="Address"
              value="<%= typeof address != 'undefined' ? address : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="Mobile">Mobile No</label>
            <input
              type="number"
              id="Mobile"
              name="Mobile"
              class="form-control"
              placeholder="Mobile"
              value="<%= typeof Mobile != 'undefined' ? Mobile : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/employee/login">Login</a></p>
      </div>
    </div>
  </div>
  