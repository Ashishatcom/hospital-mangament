<% include ../partials/home-header %>
<style>
.row {
    width: 100%;
}
.register_form{
    width:50%;
    margin: 0 auto;
}
</style>
<div class="row mt-5">
  <% include ../partials/messages %>
    <div class="register_form">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Schedule An Appointment
        </h1>
        <hr>
        <form action="/appointment" method="POST">
          <div class="container_appointment">   
          <div class="col-md-6">
            <div class="form-group">
              <label for="name">First Name</label>
              <input
                type="text"
                id="firstname"
                name="firstname"
                class="form-control"
                placeholder="Enter First Name"
                value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="name">Last Name</label>
              <input
                type="text"
                id="lastname"
                name="lastname"
                class="form-control"
                placeholder="Enter Last Name"
                value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
              />
            </div>
          </div>
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="address">Address</label>
            <input
              type="text"
              id="address"
              name="address"
              class="form-control"
              placeholder="Address"
              value="<%= typeof address != 'undefined' ? address : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="Mobile">Mobile No</label>
            <input
              type="number"
              id="Mobile"
              name="Mobile"
              class="form-control"
              placeholder="Mobile"
              value="<%= typeof Mobile != 'undefined' ? Mobile : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="Mobile">Select Doctor</label>
            <select  class="form-control"name= "selectdoctor" placeholder="select Your Doctor"value="<%= typeof selectdoctor != 'undefined' ? selectdoctor : '' %>">
              <option value="Choose Doctor">Choose Doctor</option>
              <% if(typeof Doctordata != 'undefined') { %>
              <% Doctordata.forEach(element=>{ %>
                  <option value="<%=element.id %>"><%=element.Name %></option>
              <% }); %>
          <% } %>
            </select>
          </div>
          <div class="form-group">
            <!-- <div class="container">
              <div class="row">
                  <div class='col-sm-6'>
                      <input type='text' class="form-control" id='datetimepicker4' />
                  </div>
                  <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker4').datetimepicker();
                    });
                </script>
              </div>
          </div> -->

            <label for="Mobile">Choose An Appointment Date</label>
            <input
              type="date"
              id="appointmentdatae"
              name="appointmentdatae"
              class="form-control"
              placeholder="appointmentdatae"
              value="<%= typeof appointmentdatae != 'undefined' ? appointmentdatae : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="Mobile">Descriptation</label>
            <textarea
              rows="5" 
              cols="20"
              id="desc"
              name="desc"
              class="form-control"
              placeholder="Descriptation"
              value="<%= typeof desc != 'undefined' ? desc : '' %>"
            ></textarea>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
      </div>
    </div>
  </div>